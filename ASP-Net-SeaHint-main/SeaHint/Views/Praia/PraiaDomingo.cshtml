@{
    Layout = null;
}

@model IEnumerable<Praia>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrossel de Cards</title>
    <link rel="stylesheet" href="~/css/descricao.css">
</head>
<body>
    @foreach (var domingo in Model)
    {
        <p class="titulo">

            @domingo.nome

        </p>
    }
        <img src="~/img/praiabranca.jpg" class="praia" />

        <div class="textdescr">

        @foreach (var domingo in Model){
            <p class="text">
                @domingo.descricao
            </p>
        }



        </div>
        <div class="mapapraia">
            <img class="mapa" src="~/img/mapamaresias.png" />
            <a href="https://maps.app.goo.gl/jekACRyw9bqV9rF87"> <h1 class="endereco"> localização no Google Maps </h1> </a>
        </div>

    <p> @ViewBag.curiosidade3</p>



</body>
